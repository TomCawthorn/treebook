<div class="page-header">
	<h1><%= @user.full_name %></h1>
</div>


<% if signed_in? %>
	<div id="friend-status">
		<% if current_user.friends.include?(@user) || current_user.pending_friends.include?(@user) || current_user.blocked_friends.include?(@user)%>
			<%= link_to "Update friendship", edit_user_friendship_path(friend_id: @user), class: 'btn' %>
		<% else %>
			<%= link_to "Add Friend", new_user_friendship_path(friend_id: @user), class: 'btn', id: 'add-friendship', data: {friend_id: @user.to_param} %>
		<% end %>
	</div>
<% end %>

<div>
	<% if @statuses %>
		<% @statuses.each do |status| %>
			<p><%= status.content %></p>
		<% end %>
	<% end %>
</div>