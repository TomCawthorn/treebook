

<div class="row">
  <div class="col-md-6">
    <div class="page-header">
          <h2>Needs Feed
            <%= link_to "New Post", new_status_path, class: "btn btn-primary btn-sm white new-post-button" %>
          </h2>
    </div>


    <% @statuses.each do |status| %>
    <% if can_display_status? status %>

      <div class="row">
        <div class="col-xs-8">
          <h4><%= link_to status.user.full_name, profile_path(status.user) %></h4>
        </div>
        <div class="col-xs-4">
          <div class="btn-group">
            <button type="button" class="btn btn-default btn-link dropdown-toggle" data-toggle="dropdown">
              More<span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" role="menu">
              <li><%= link_to "edit", edit_status_path(status) %></li>
              <li><%= link_to "delete", status, method: :delete, data: {confirm: "Are you sure you want to delete your status?" } %> </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-sm-8">
          <p><%= status.content %></p>
          <small><%= time_ago_in_words(status.created_at) + " ago" %></small>
        </div>
      </div>

      <hr>
      <% end %>
      <% end %>
  </div>
</div>